<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@color/purple_200">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:clipToPadding="true"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/id_imageMovie"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        tools:text="Titulo Ejemplo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintBottom_toTopOf="@id/cv_imageMovie"/>

    <TextView
        android:id="@+id/tv_textRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/ic_baseline_star_rate_24"
        app:drawableTint="#FFD700"
        tools:text="7.1"
        android:gravity="center"
        android:drawablePadding="8dp"/>



</LinearLayout>